<div class="content">
    <div class="pb-5">
        <div class="row g-4">
            <div class="col-12 col-xxl-6">
                <div class="mb-8">
                    <h2 class="mb-2">Announcements</h2>
                    <h5 class="text-body-tertiary fw-semibold">Manage your announcements</h5>
                </div>
                <div class="container mt-4 d-flex align-items-center flex-column">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4 w-100">
                        <div>
                            <h2 class="fw-bold">ðŸ“¢ Announcements</h2>
                            <p class="text-muted">Stay updated with the latest faculty updates and notices.</p>
                        </div>
                        <!-- Faculty only -->
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAnnouncementModal">
                            + New Announcement
                        </button>
                    </div>

                    <!-- Announcement Feed -->
                    <div id="announcementList" class="w-50"></div>
                </div>

                <!-- Modal: New Announcement -->
                <div class="modal fade" id="newAnnouncementModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Create Announcement</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Content</label>
                                    <textarea class="form-control" id="content" rows="3" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Author</label>
                                    <input type="text" class="form-control" id="author" required>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="pinned">
                                    <label class="form-check-label">Pin this announcement</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" id="createBtn" class="btn btn-primary">Post</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <footer class="footer position-absolute">
        <div class="row g-0 justify-content-between align-items-center h-100">
            <div class="col-12 col-sm-auto text-center">
                <p class="mb-0 mt-2 mt-sm-0 text-body">Â© 2025 LMS</p>
            </div>
            <div class="col-12 col-sm-auto text-center">

            </div>
        </div>
    </footer>
</div>

<script>
    fetch('http://localhost:8080/get-annoucement')
        .then(response => response.json())
        .then(data => {
            let feedsHTML = '';

            data.announcements.forEach(feed => {
                feedsHTML += `
                     <div class="card mb-5">
                        <div class="card-header d-flex justify-content-between">
                            <div>
                                <div class="card-title">${feed.title}</div>
                                <div class="small">${feed.author}</div>
                            </div>
                            <div>
                                <button data-bs-target="#editAnnouncementModal${feed.id}" data-bs-toggle="modal" class="btn btn-primary p-1">Edit</button>
                                <button data-announcement-id="${feed.id}" class="delete-announcement-btn btn btn-danger p-1">Delete</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <p>${feed.content}</p>
                        </div>
                        <div class="card-footer">
                            <button class="btn border border-primary">Like</button>
                            <button class="btn border border-warning">Comments</button>
                        </div>

                        <div class="modal fade" id="editAnnouncementModal${feed.id}" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit Announcement</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Title</label>
                                            <input type="text" class="form-control" id="editTitle${feed.id}" value="${feed.title}">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Content</label>
                                            <textarea class="form-control" id="editContent${feed.id}" rows="3">${feed.content}</textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Author</label>
                                            <input type="text" class="form-control" id="editAuthor${feed.id}" value="${feed.author}">
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="pinned">
                                            <label class="form-check-label">Pin this announcement</label>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" data-announcement-id="${feed.id}" class="edit-announcement-btn btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                `;
            })

            document.getElementById('announcementList').innerHTML = feedsHTML;

            document.querySelectorAll('.edit-announcement-btn').forEach(btn => {
                btn.onclick = function () {
                    const announcementId = btn.dataset.announcementId;
                    const title = document.getElementById(`editTitle${announcementId}`).value;
                    const content = document.getElementById(`editContent${announcementId}`).value;
                    const author = document.getElementById(`editAuthor${announcementId}`).value;

                    fetch('http://localhost:8080/update-announcement', {
                        method: 'PATCH',
                        headers: {
                            'Accept': 'application/json',
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            announcementId: announcementId,
                            title: title,
                            content: content,
                            author: author,
                        })
                    })
                        .then(response => response.json())
                        .then(result => {

                            window.location.reload();
                        })
                        .catch(err => console.error(err));
                }
            });

            document.querySelectorAll('.delete-announcement-btn').forEach(btn => {
                btn.onclick = function () {
                    const announcementId = btn.dataset.announcementId;

                    fetch('http://localhost:8080/delete-announcement', {
                        method: 'DELETE',
                        headers: {
                            'Accept': 'application/json',
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            id: announcementId
                        })
                    })
                        .then(response => response.json())
                        .then(result => {

                            window.location.reload();
                        })
                        .catch(err => console.error(err));
                }
            });
        })
        .catch(err => console.error(err));

    document.getElementById('createBtn').onclick = function () {
        const title = document.getElementById('title').value;
        const content = document.getElementById('content').value;
        const author = document.getElementById('author').value;

        fetch('http://localhost:8080/create-announcement', {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                title: title,
                content: content,
                author: author
            })
        })
            .then(response => response.json())
            .then(result => {
                window.location.reload();
            })
            .catch(err => console.error(err));
    }
</script>