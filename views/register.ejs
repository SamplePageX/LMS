    <script>
        document.getElementById('registerBtn').onclick = () => {
            const fullname = document.getElementById('fullname');
            const schoolId = document.getElementById('school_id');
            const email = document.getElementById('email');
            const password = document.getElementById('password');
            const confirmPass = document.getElementById('confirmPassword');
            const acceptTermsConditions = document.getElementById('basic-checkbox');
            let inputsAreValid = false;

            document.getElementById('fullnameError').textContent = !fullname.value ? 'Name must not be empty' : '';
            document.getElementById('schoolIdError').textContent = !schoolId.value ? 'School ID must not be empty' : '';
            document.getElementById('emailError').textContent = !email.value ? 'Email must not be empty' : '';

            fullname.onfocus = () => {
                document.getElementById('fullnameError').textContent = '';
            }
            schoolId.onfocus = () => {
                document.getElementById('schoolIdError').textContent = '';
            }
            email.onfocus = () => {
                document.getElementById('emailError').textContent = '';
            }

            password.onfocus = () => {
                document.getElementById('passwordError').textContent = '';
            }

            confirmPass.onfocus = () => {
                document.getElementById('passwordError').textContent = '';
            }

            if (password.value !== confirmPass.value) {
                document.getElementById('passwordError').textContent = "Confirm password didn't match";
            } else if (!password.value && !confirmPass.value) {
                document.getElementById('passwordError').textContent = "Password must not be empty";
            }

            if (!acceptTermsConditions.checked) {
                document.getElementById('termsConditionError').textContent = 'Please accept the terms and conditions';
            }

            acceptTermsConditions.onchange = () => {
                document.getElementById('termsConditionError').textContent = '';
            }

            if (fullname.value && schoolId.value && email.value && password.value && acceptTermsConditions.checked) {
                inputsAreValid = true;
            } else {
                return;
            }

            if (inputsAreValid) {
                fetch('http://localhost:8080/register', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        fullname: fullname.value,
                        school_id: schoolId.value,
                        email: email.value,
                        password: password.value
                    })
                })
                .then(response => response.json())
                .then(result => {
                    window.location.href = result.redirect;
                })
                .catch(err => console.error(err));
            }

        }
    </script>
